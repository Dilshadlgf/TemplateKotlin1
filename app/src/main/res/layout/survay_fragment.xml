<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".YourActivity">

    <!-- House UID -->
    <TextView
        android:id="@+id/textViewHouseUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House UID"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextHouseUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter House UID"/>

    <!-- House Number -->
    <TextView
        android:id="@+id/textViewHouseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Number"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextHouseNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter House Number"/>

    <!-- Property Type Spinner -->
    <TextView
        android:id="@+id/textViewPropertyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerPropertyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Ward Spinner -->
    <TextView
        android:id="@+id/textViewWard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ward"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerWard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Sector Spinner -->
    <TextView
        android:id="@+id/textViewSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerSector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
